<?xml version='1.0'?>

<launch>
  <arg name="robot_name" default="AKM_1"/>
  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find akm_control)/config/akm_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_manager" pkg="controller_manager" type="spawner" respawn="false"
        output="screen" args="left_rear_wheel_velocity_controller right_rear_wheel_velocity_controller
                                            left_front_wheel_velocity_controller right_front_wheel_velocity_controller
                                            left_steering_hinge_position_controller right_steering_hinge_position_controller
                                            joint_state_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
    <param name="tf_prefix" value="$(arg robot_name)"/>
  </node>
  <!-- servo node -->
  <node pkg="akm_control" type="servo_commands.py" name="servo_commands" output="screen">
  </node>

  <!-- Allow for Gazebo to broadcast odom -->
  <node pkg="akm_gazebo" name="gazebo_odometry_node" type="gazebo_odometry.py" output="screen">
    <param name="robot_name" type="string" value="$(arg robot_name)"/>
  </node>
</launch>
